<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SEAL.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SEAL.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SEAL">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
  <StackPanel Orientation="Horizontal" Spacing="10">
    <StackPanel Spacing="10">
      <TextBlock Margin="0, 0, 200, 0" Text="{Binding Greeting}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30"/>
      <Label>Source File</Label>
      <TextBox></TextBox>
      <TextBlock Text="{Binding pickedfile}"/>
      <Button Command="{Binding FindFile}" Content="Pick File"/>
    </StackPanel>
  </StackPanel>
  
</Window>
